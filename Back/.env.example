PORT=4000
NODE_ENV=development
CORS_ORIGINS=http://localhost:3000,http://localhost:4000

# DB (app corre en host; DB dentro de Docker mapeada al 5432 local)
DB_DIALECT=postgres
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASS=postgres
DB_NAME=rickmorty

# Redis (también mapeado al host)
REDIS_URL=redis://localhost:6379


# ... (PGADMIN)
PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD=admin123
PGADMIN_PORT=5050

# TTL (segundos) para la caché
CACHE_TTL_SECONDS=60

# --- Syncronizacion variables ---
RM_API_URL=https://rickandmortyapi.com/api
CRON_ENABLED=true
CRON_EXPRESSION=0 */12 * * *      # cada 12 horas actualiza
CRON_TZ=America/Bogota
CRON_RUN_ON_START=true           # si true: corre una sync al arrancar

# Este es la clave para ejecutar el servicio del cron de actualizacion
SYNC_SECRET=secret

# --- sync externa ---
RM_REQUEST_TIMEOUT_MS=10000     # timeout por request (10s) espera 10 segundos para respuesta
RM_RETRY_MAX=3                  # esto es para reintentos del request
RM_RETRY_DELAY_MS=600           # backoff base (ms)
RM_SYNC_MAX_PAGES=0             # 0 = todas; >0 limita páginas para dev (ej: 3)
RM_SYNC_IGNORE_ERRORS=true      # true = continúa si una página falla tras reintentos
